# VITA Frontier Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
PORT=5000
NODE_ENV=development

# Session Security (required)
# Generate with: openssl rand -hex 32
SESSION_SECRET=your-secret-key-here

# Database Configuration
# If DATABASE_URL is set, PostgreSQL will be used
# Otherwise, SQLite will be used with DB_PATH
DATABASE_URL=postgresql://user:password@host:port/database

# SQLite fallback path (only used if DATABASE_URL is not set)
DB_PATH=data/vita.db

# Session Cookie Security
# Set to true in production with HTTPS
SESSION_COOKIE_SECURE=false

# Multi-tenant subdomain routing (optional)
SUBDOMAIN_TENANCY=false
